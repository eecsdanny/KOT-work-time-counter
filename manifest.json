{
  "name": "KOT work time counter",
  "version": "1.0",
  "description": "help caculate the work time",
  "permissions": ["declarativeContent","storage","activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon.png",
      "48": "images/48.png",
      "32": "images/32.png",
      "16": "images/16.png"
    }
  },
  "icons": {
    "128": "images/icon.png",
    "48": "images/48.png",
    "32": "images/32.png",
    "16": "images/16.png"

  },
  "manifest_version": 2
}